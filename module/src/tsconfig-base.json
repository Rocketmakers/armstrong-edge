{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": false,
    "noLib": false,
    "preserveConstEnums": false,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "lib": ["es2016", "dom"]
  },
  "exclude": ["node_modules", "stories", "**/*.stories.*", "**/*.cy-test.tsx"]
}
