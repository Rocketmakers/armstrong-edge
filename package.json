    "test-storybook": "(cd storybook && pnpm test-storybook)"
  },
  "devDependencies": {
    "commitizen": "4.3.0",
    "cz-customizable": "7.0.0",
    "husky": "8.0.3",
    "watch": "1.0.2"
  },
  "config": {
    "cz-customizable": {
      "config": "./commitizen.config.js"
    },
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}