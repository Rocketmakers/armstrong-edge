{
  "name": "@rocketmakers/armstrong-edge",
  "version": "0.0.1",
  "description": "Initial stating project for the 2021 Armstrong rewrite. Will be integrated into the Armstrong repo.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rocketmakers/armstrong-rewrite.git"
  },
  "author": "developers@rocketmakers.com",
  "license": "MIT",
  "scripts": {
    "setup": "asdf install && npm i && (cd module && npm i --legacy-peer-deps)",
    "test": "(cd module && npm test)",
    "prepare": "husky install",
    "storybook": "(cd module && npm run storybook)",
    "watch-scss": "(cd module && ts-node ./_build/scss/watch.ts)",
    "test-storybook": "(cd module && npm run test-storybook)"
  },
  "devDependencies": {
    "commitizen": "4.3.0",
    "cz-customizable": "7.0.0",
    "husky": "8.0.3",
    "watch": "1.0.2"
  },
  "config": {
    "cz-customizable": {
      "config": "./commitizen.config.js"
    },
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  }
}
